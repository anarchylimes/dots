# safari
cmd - f [
	"Safari"       ~
	*              : open-app finder
]
cmd - t [
	"Safari"       ~
	*              : open -a Safari "file:///Users/zzzeyez/scripts/pollen/index.html"
]

# wallpaper
cmd + shift - 0 : wallpaper -n ~/pictures/wallpapers
lcmd - 0 : wallpaper -no ~/pictures/wallpapers
cmd + shift - d : new-roses -ns ~/pictures/wallpapers
# colors
rcmd - 0 : wallpaper -o 0
