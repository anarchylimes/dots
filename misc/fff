#/usr/bin/env bash
# sets config for `fff`

# text editor
export EDITOR="nvim"

# trash
export FFF_TRASH=~/.Trash

# bookmarks (keys 1-9)
export FFF_FAV1=~
export FFF_FAV2=~/scripts
export FFF_FAV3=~/pictures/wallpapers
export FFF_FAV4=~/downloads
export FFF_FAV5=/Volumes/xanthia

# bindings
export FFF_KEY_TO_TOP="off"
export FFF_KEY_GO_DIR="g"

## directory color [0-9]
export FFF_COL1=2

# status color [0-9]
export FFF_COL2=1

# selection color [0-9] (copied/moved files)
export FFF_COL3=6

# cursor color [0-9]
export FFF_COL4=1

# File format.
# Customize the item string.
# Format ('%f' is the current file): "str%fstr"
# Example (Add a tab before files): FFF_FILE_FORMAT="\t%f"
export FFF_FILE_FORMAT="%f"

# Mark format.
# Customize the marked item string.
# Format ('%f' is the current file): "str%fstr"
# Example (Add a ' >' before files): FFF_MARK_FORMAT="> %f"
export FFF_MARK_FORMAT=" %f*"
